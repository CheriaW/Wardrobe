@model IEnumerable<BasicClosetMVC.Models.Item>

@{
    ViewBag.Title = "Index";
}

<h2>Wardrobe</h2>

<p>
    <div class="mobile" role="alert">
        <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span>
    @Html.ActionLink("Add New Clothing Item", "Create")
        </div>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Category.ClothingName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
       
      
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.ClothingName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type)
        </td>
        <td>
      
        <td>

            <div class="mobile" role="alert">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                <span class="sr-only">Error:</span>
            @Html.ActionLink("Edit", "Edit", new { id=item.ItemID }) |||
                </div>

            <div class="mobile" role="alert">
                <span class="glyphicon glyphicon-th-large" aria-hidden="true"></span>
                <span class="sr-only">Error:</span>
            @Html.ActionLink("Details", "Details", new { id=item.ItemID }) |||
                </div>

            <div class="mobile" role="alert">
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                <span class="sr-only">Error:</span>
            @Html.ActionLink("Delete", "Delete", new { id=item.ItemID }) |||
                </div>
        </td>
    </tr>
}

</table>
