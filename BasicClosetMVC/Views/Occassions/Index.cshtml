@model IEnumerable<BasicClosetMVC.Models.Occassion>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <div class="mobile" role="alert">
        <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>
        <span class="sr-only">Error:</span>
        @Html.ActionLink("Add a Special Occassion!", "Create")
        </div>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OccassionName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.OccassionName)
        </td>
        <td>
            <div class="mobile" role="alert">
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                <span class="sr-only">Error:</span>
                @Html.ActionLink("Edit", "Edit", new { id = item.OccassionsID }) |||
            </div>

            <div class="mobile" role="alert">
                <span class="glyphicon glyphicon-th-large" aria-hidden="true"></span>
                <span class="sr-only">Error:</span>
                @Html.ActionLink("Details", "Details", new { id = item.OccassionsID }) |||
            </div>

            <div class="mobile" role="alert">
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                <span class="sr-only">Error:</span>
                @Html.ActionLink("Delete", "Delete", new { id = item.OccassionsID }) |||
            </div>
        </td>
    </tr>
}

</table>
